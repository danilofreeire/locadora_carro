<p style="color: green"><%= notice %></p>

<div class="d-flex justify-content-end mb-3">
  <%= link_to "Exportar PDF", administrate_users_path(format: :pdf), class: "btn btn-new me-2", target: "_blank" %>

  <%= link_to "Novo user", new_administrate_user_path, class: "btn btn-new me-2" %>

</div>

<h1 class="text-center">users</h1>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead class="table-success">
      <tr>
        <th>#</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Telefone</th>
        <th>Endereço</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each_with_index do |user, index| %>
        <tr>
          <td><%= user.id%></td>
          <td><%= user.nome %></td>
          <td><%= user.email %></td>
          <td><%= user.telefone %></td>
          <td><%= user.endereco %></td>
          <td>
            <div class="d-flex justify-content-start align-items-center">
              <%= link_to [:administrate, user], title: "Visualizar", alt: "eye", class: "me-2" do %>
                <%= image_tag 'icons/gray/eye.svg' %>
              <% end %>

              <%= link_to edit_administrate_user_path(user), title: "Editar", class: "me-2" do %>
                <%= image_tag 'icons/gray/edit.svg' %>
              <% end %>

              <%= button_to [:administrate, user], 
                            data: { turbo: false }, 
                            method: :delete, 
                            title: "Apagar", 
                            alt: "close", 
                            style: "border: none; background: transparent; padding: 0;" do %>
                <%= image_tag 'icons/gray/close.svg' %>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div style="display: flex; justify-content: center; margin-top: 20px;">
  <%= paginate @users %>
</div>
