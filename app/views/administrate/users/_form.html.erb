<%= form_with(model: [:administrate, user]) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nome, style: "display: block" %>
    <%= form.text_field :nome %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.email_field :email  %>
  </div>


  <!-- Campo de Senha -->
  <div>
    <%= form.label :password, "Senha", style: "display: block" %>
    <% if @minimum_password_length %>
      <small class="text-muted">(Min: <%= @minimum_password_length %> caracteres)</small>
    <% end %>
    <%= form.password_field :password, autocomplete: "new-password" %>
  </div>


 <div>
      <%= form.label :password_confirmation, "Confirme sua Senha" %>
      <%= form.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
<div>
    <%= form.label :telefone, style: "display: block" %>
    <%= form.text_field :telefone %>
  </div>

  <div>
    <%= form.label :endereco, style: "display: block" %>
    <%= form.text_field :endereco %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
