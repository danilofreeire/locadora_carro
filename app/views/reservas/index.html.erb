<p style="color: green"><%= notice %></p>

<div class="d-flex justify-content-end mb-3">
  <%= link_to "Nova Reserva", new_reserva_path, class: "btn btn-new" %>
</div>

<h1 class="text-center">Minhas Reservas</h1>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead class="table-success">
      <tr>
        <th>#</th>
        <th>Carro</th>
        <th>Data de Início</th>
        <th>Data de Fim</th>
        <th>Status</th>
        <th>Valor</th>
      </tr>
    </thead>
    <tbody>
      <% @reservas.each_with_index do |reserva, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= reserva.carro.modelo %></td>
          <td><%= reserva.data_inicio.strftime('%d/%m/%Y') %></td>
          <td><%= reserva.data_fim.strftime('%d/%m/%Y') %></td>
          <td><%= reserva.status %></td>
          <td><%= reserva.preco_total %></td>
        </tr>

      <% end %>
    </tbody>
  </table>
</div>





